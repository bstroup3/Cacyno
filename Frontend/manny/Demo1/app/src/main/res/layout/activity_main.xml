<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="1000dp"
            android:layout_height="1241dp" app:srcCompat="@drawable/new_project_transparent"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.729" android:contentDescription="@string/main_logo"/>
    <Button
            android:text="@string/Login"
            android:layout_width="375dp"
            android:layout_height="wrap_content" android:id="@+id/log"
            app:backgroundTint="#C8102E "
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="473dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="18dp" android:layout_marginStart="18dp" android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>