<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>
    <Button
            android:id="@+id/btnPlayCreate"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/PlayCreate_game_button"
            app:backgroundTint="#C8102E"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="536dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="9dp" android:layout_marginStart="9dp" android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="440dp"
            android:layout_height="831dp" app:srcCompat="@drawable/backgroundhome"
            android:id="@+id/backgroundImage"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/homeBackground_image"
            app:layout_constraintHorizontal_bias="0.51"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/settingsbuttonshadow"
            android:id="@+id/settings_button"
            android:background="@android:color/transparent" android:scaleType="fitCenter" android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="308dp" android:layout_marginStart="308dp"
            android:contentDescription="@string/settings_button"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/welcomeback_white"
            android:id="@+id/welcomeBack_image"
            android:contentDescription="@string/welcomeBack_image" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/currentuser_white"
            android:id="@+id/CurrentUser_image" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/currentUser_image"/>
    <TextView
            android:text="@string/currentUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/currentUser"
            android:translationY="-1dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="785dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="153dp" android:layout_marginStart="153dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>